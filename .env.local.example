# App Configuration
NEXT_PUBLIC_APP_NAME=Open Radio
NEXT_PUBLIC_APP_DESCRIPTION=A beautiful radio experience
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Feature Toggles
NEXT_PUBLIC_ANALYTICS_ENABLED=false
# Firebase is optional - set to false to show "LIVE" badge instead of real-time listener count
NEXT_PUBLIC_FIREBASE_ENABLED=true

# Branding Configuration
NEXT_PUBLIC_BRANDING_ENABLED=true
# NEXT_PUBLIC_BRANDING_LOGO_URL=/assets/your-custom-logo.svg  # Leave empty to use default logo
NEXT_PUBLIC_BRANDING_LINK_URL=https://your-website.com

# Social Media Images (optional)
NEXT_PUBLIC_OG_IMAGE_URL=/og-image.png
NEXT_PUBLIC_TWITTER_IMAGE_URL=/og-image.png

# YouTube API Configuration
NEXT_PUBLIC_YOUTUBE_API_KEY=your_youtube_api_key_here
NEXT_PUBLIC_PLAYLIST_ID=your_playlist_id

# Firebase Configuration (optional - only needed if NEXT_PUBLIC_FIREBASE_ENABLED=true)
# If you don't configure Firebase, the app will show "LIVE" instead of real-time listener count
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.firebaseio.com 